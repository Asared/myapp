extends ../layout

block content
    script(src='/javascripts/material.js')
    h1= title
    button(id='create_material') Создать
    button(id='delete_material') Удалить
    table#tbl_material
        tr 
            th id
            th Имя
            th Цена за грамм
    div#create_material_popup.q-window
          div.q-window-block(style="width:300px;height:220px;margin:0px 0 0 -400px")
            div.q-window-header Добавить материал
              a#create_material_popup_close(style="create: relative;left: 38px;") X
            div.q-window-body.q-form
              div.q-window-filters-form
                div.q-form-data
                  create(for="inpMaterial_name") Имя
                  input#inpMaterial_name(type="text")
                div.q-form-data
                  create(for="inpMaterial_price_per_gram") Цена за грамм
                  input#inpMaterial_price_per_gram(type="Numeric")

            div.q-buttons
              a#submit_create_material Создать
              a#cancel_create_material Отменить

    div#delete_material_popup.q-window
          div.q-window-block(style="width:300px;height:220px;margin:0px 0 0 -400px")
            div.q-window-header Удалить Клиента
              a#delete_material_popup_close(style="delete: relative;left: 38px;") X
            div.q-window-body.q-form
              div.q-window-filters-form
                div.q-form-data
                  delete(for="inpId") id материала
                  input#inpId(type="INT")

            div.q-buttons
              a#submit_delete_material Удалить
              a#cancel_delete_material Отменить