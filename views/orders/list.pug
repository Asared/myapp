extends ../layout

block content
    script(src='/javascripts/orders.js')
    <input type="text" id="searchname" placeholder="Поиск по имени">
    h1= title
    button(id='create_orders') Создать
    button(id='delete_orders') Удалить
    button(id='search_orders') Поиск
    table#tbl_orders
        tr 
            th id
            th имя
            th Общая Сумма


    div#create_orders_popup.q-window
          div.q-window-block(style="width:300px;height:220px;margin:0px 0 0 -400px")
            div.q-window-header Добавить Заказ
              a#create_orders_popup_close(style="create: relative;left: 38px;") X
            div.q-window-body.q-form
              div.q-window-filters-form
                div.q-form-data
                  create(for="inpAmount") Общая цена
                  input#inpAmount(type="text")
                div.q-form-data
                  create(for="inpLabel") User id
                  input#inpLabel(type="text")

            div.q-buttons
              a#submit_create_orders Создать
              a#cancel_create_orders Отменить

    div#delete_orders_popup.q-window
          div.q-window-block(style="width:300px;height:220px;margin:0px 0 0 -400px")
            div.q-window-header Удалить Заказ
              a#delete_orders_popup_close(style="delete: relative;left: 38px;") X
            div.q-window-body.q-form
              div.q-window-filters-form
                div.q-form-data
                  delete(for="inpId") id Заказа
                  input#inpId(type="INT")

            div.q-buttons
              a#submit_delete_orders Удалить
              a#cancel_delete_orders Отменить